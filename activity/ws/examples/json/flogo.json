{
  "name": "MyProxy",
  "type": "flogo:app",
  "version": "1.0.0",
  "description": "This is a simple websocket proxy.",
  "properties": null,
  "channels": null,
  "triggers": [
    {
      "name": "flogo-rest",
      "id": "MyProxy",
      "ref": "github.com/project-flogo/contrib/trigger/rest",
      "settings": {
        "port": "9096"
      },
      "handlers": [
        {
          "settings": {
            "method": "POST",
            "path": "/message"
          },
          "actions": [
            {
              "id": "microgateway:Websocket"
            }
          ]
        }
      ]
    }
  ],
  "resources": [
    {
      "id": "microgateway:Websocket",
      "compressed": false,
      "data": {
        "name": "Websocket",
        "steps": [
          {
            "service": "Websocket",
            "input": {
              "message": "=$.payload.content"
            }
          }
        ],
        "responses": [
          {
            "error": false,
            "output": {
              "code": 200
            }
          }
        ],
        "services": [
          {
            "name": "Websocket",
            "description": "Send a websocket message",
            "ref": "github.com/project-flogo/websocket/activity/ws",
            "settings": {
              "uri": "ws://localhost:8080/ws"
            }
          }
        ]
      }
    }
  ],
  "actions": [
    {
      "ref": "github.com/project-flogo/microgateway",
      "settings": {
        "uri": "microgateway:Websocket"
      },
      "id": "microgateway:Websocket",
      "metadata": null
    }
  ]
}
